
@{
    ViewData["Title"] = "Delete";
}
@model Empleados
<div class="container mt-4">
    <div class="alert alert-danger">
        <h2><i class="bi bi-exclamation-triangle"></i>@ViewData["Title"]</h2>
        <p class="lead">¿Estas seguro de eliminar el registro del empleado?</p>
    </div>
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5>Detalles del empleado</h5>
        </div>
        <dt class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombres:</dt>
                <dd class="col-sm-9">@Model.nombres</dd>

                <dt class="col-sm-3">Apellidos:</dt>
                <dd class="col-sm-9">@Model.apellidos</dd>

                <dt class="col-sm-3">Edad:</dt>
                <dd class="col-sm-9">@Model.edad</dd>

                <dt class="col-sm-3">Numero de empleado</dt>
                <dd class="col-sm-9">@Model.dniEmpleado</dd>

                <dt class="col-sm-3">Correo electronico:</dt>
                <dd class="col-sm-9">@Model.email</dd>
            </dl>
        </div>
    </div>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="idEmpleado"/>
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left">Volver</i>
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i>Eliminar
            </button>
        </div>
    </form>
