
@{
    ViewData["Title"] = "Index";
}
@model List<Empleados>

    <a class="btn btn-primary" asp-action="Create">Nuevo registro</a>
<div class="container">
    <div class="row">
        <h2>Lista de empleados</h2>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>Nombres</td>
                <td>Apellidos</td>
                <td>Edad</td>
                <td>Numero empleado</td>
                <td>Correo electronico</td>
                <td>Acciones</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var empleado in Model)
            {
                <tr>
                    <td>@empleado.nombres</td>
                    <td>@empleado.apellidos</td>
                    <td>@empleado.edad</td>
                    <td>@empleado.dniEmpleado</td>
                    <td>@empleado.email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@empleado.idEmpleado" class="btn btn-warning">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>